<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_first_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bdar_drawable_slam_indicate_light_selector" />

    <ImageView
        android:id="@+id/iv_second_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_first_light"
        android:src="@drawable/bdar_drawable_slam_indicate_light_selector" />

    <ImageView
        android:id="@+id/iv_third_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_second_light"
        android:src="@drawable/bdar_drawable_slam_indicate_light_selector" />

</RelativeLayout>